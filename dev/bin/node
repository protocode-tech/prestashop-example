#!/bin/sh

THEME=$(dev/script/db_exec "SELECT theme_name FROM \${DB_PREFIX}shop LIMIT 1")
THEME=$(echo $THEME | sed 's/theme_name //')

NODE_VERSION="14.17.4"
DOCKER_RUNNER="docker run --quiet --rm -t -v ./themes/$THEME:/app --workdir /app/_dev node:$NODE_VERSION-alpine"

# This is node container callable as a binary (ex: dev/bin/node --version)
$DOCKER_RUNNER "$@"
